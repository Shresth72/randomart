out vec4 finalColor;

void main() {
  float r = radius;
  vec2 p = fragTexCoord - vec2(0.5);
  if (length(p) <= 0.5) {
    float s = length(p) - r;
    if (s <= 0) {
      finalColor = fragColor*0.5;
    } else {
      float t = 1 - s / (0.5 - r);
      finalColor = mix(vec4(fragColor.xyz, 0), fragColor*1.5, pow(t, power));
    }
  } else {
    finalColor = vec4(0);
  }
}
